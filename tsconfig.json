{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/lib/index.d.ts", "src/**/*.svelte"],
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@demo/*": ["./src/demo/*"]
    }
  }
}
