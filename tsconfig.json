{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/lib/index.d.ts"],
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@lib/*": ["src/lib/*"],
      "@demo/*": ["src/demo/*"]
    }
  }
}
